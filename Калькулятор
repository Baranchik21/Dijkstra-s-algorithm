#include <iostream> // подключение библиотеки, для возможности вывода в консоль
using namespace std; // указание пространства имён, для кода ниже
void main()
{
	setlocale(LC_ALL, "Rus"); //делает расшифровку для русских символов
	int a,b,c;
	cout << "Выберите какое действие хотите сделать:\n"<<                
		" 1- Cложение\n"<<
		" 2- Вычитание\n"<<
		" 3- Умножение\n"<<
		" 4- Деление ";
	cin >> a;
	cout << "Введите два числа- "; /*               
	cin >> b >> c;
	
	switch(a){                //взависимости от выбора действия программа решает что делать с числами
	case 1:
		cout << b + c;
		break;
	case 2:
		cout << b - c;                     
		break;
	case 3:
		cout << b * c;
		break;
	case 4:
		cout << (float)b / c;          //при делении делаем вещественный тип
		break;
	}
}
